{
  "manifest_version": 2,
  "name": "Hoard it!",
  "version": "1.1",
  "description": "A simple Hoard button",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/bookmark-it",
  "icons": {
    "48": "icons/48.png",
    "96": "icons/96.png"
  },

  "permissions": [
    "bookmarks",
    "tabs"
  ],

  "browser_action": {
    "default_icon": "icons/38-bizaro.png",
    "default_title": "Hoard it!"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["check-git.js"]
    }
  ]

}
